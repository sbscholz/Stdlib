/** <!--********************************************************************-->
 *
 * @fn  int dim( <a>[*] Array)
 *
 *   @brief  yields an array's dimensionality (rank).
 *
 ******************************************************************************/

#define DIM( typ, postfix, zval, oval) \
inline                                 \
int dim( typ[*] array)                 \
{                                      \
  return( _dim_A_( array));            \
}

BUILT_IN( DIM)


